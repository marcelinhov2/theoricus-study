html, body
	height: 100%

body 
	background:#000
	position: relative

.clear
	clear:both

#loader
	position: absolute 
	top: 50% 
	left: 50%
	margin: -16px 0 0 -16px
	display: none
	width: 32px
	height: 32px
	text-indent:-9999px
	background:url('../images/loader.gif') no-repeat
	opacity: .7

#container
	width: 100%
	height: 100%
	min-width: 960px
	position:relative

.visual_identity 
	h1
		background:url('../images/sprite.png') no-repeat
		text-indent:-9999px
	.social
		margin: 0 auto
		> li
			float: left
			&:last-child
				margin-right:0px !important
			
			> a
				display:block
				background:url('../images/sprite.png') no-repeat
				text-indent:-9999px
				opacity: .3

